<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Snappit</title>
    <link href="css/main.css" rel="stylesheet">
    <link href="css/icons.css" rel="stylesheet">
</head>

<body>
    <header>
        <div class="title">
            <h1>Snapp<span>it</span></h1>

        </div>
        <div id="notif">
            <div class="notif" id="notifsaving">
                <span>Saving</span><i class="snap-loader"></i>
            </div>
            <div class="notif" id="notifsaved">
                <span>Saved</span><i class="snap-check"></i>
            </div>
            <div class="notif" id="notiferror">
                <span>Network Error</span><i class="snap-exclamation"></i>
            </div>
            <div class="notif" id="notiferror2">
                <span>Error: Unable to Save</span><i class="snap-exclamation"></i>
            </div>
        </div>
        <div style="clear:both"></div>
        <div class="tools">
        <ul>
            <li><a href="" alt="New"><i class="snap-plus"></i></a></li>
            <li><a href="" alt="Lock"><i class="snap-lock"></i></a></li>
            <li><a href="" alt="Share"><i class="snap-share"></i></a></li>
            <li><a href="" alt="Settings"><i class="snap-sliders"></i></a></li>
            <li><a href="" alt="Help"><i class="snap-help"></i></a></li>
            <li><a href="" alt="Delete"><i class="snap-cross"></i></a></li>
        </ul>
        </div>
    </header>
    <section id="mainbody">
        <section id="main">
            <h3>Save Notes</h3>
            <div id="divnote">
                <textarea id="note"><% if(!isNew){ %><%=snip.note%><% } %></textarea>
            </div>
        </section>
        <section id="side">
            <h3>Save Links</h3>
            <div id="divlinks">
                <div id="links">
                <%snip.urls&&snip.urls.forEach(function(v,i){%>
                    <div data-delid="<%=i%>">
                        <a href="<%=v.link%>" target="_blank" data-link="<%=v.link%>" data-label="<%=v.label%>"><%=v.label%><i class="snap-cross" onclick="deleteLink(event,<%=i%>)"></i></a>
                    </div>
                <% });%>
                </div>
                <form id="urlform">
                    <h4>New Link</h4>
                    <input type="text" id="labelinput" placeholder="Link Label" />
                    <input type="text" id="urlinput" placeholder="Enter link" />
                    <button type="submit">Add Link</button>
                </form>
            </div>
        </section>
    </section>
    <script src="js/jquery.min.js"></script>
    <script>
        var url = '<%=snip.url%>';
        var delid = '<%=snip&&snip.urls&&snip.urls.length || 0 %>';
        var lastUpdate = new Date;
        var changed = false;
        var noteForm = $('#note')
        var urlForm = $('#urlform')
        var urlInput =  $('#urlinput')
        var labelInput = $('#labelinput')
        var links = $('#links')
        var saving = $('#notifsaving')
        var saved = $('#notifsaved')
        var error = $('#notiferror')
        var error2 = $('#notiferror2')
        var notif = $('.notif')
        var refreshNote = function(){
            if((new Date - lastUpdate)<5000||!changed)
                return;
            var data = {url:url}
            data.note = noteForm.val() || '';
            update(data)
        }
        urlForm.submit(function(event){
            console.log('submit')
            event.preventDefault();
            addLink();
            refreshUrl();
        });

        var deleteLink = function(event,id){
            event.preventDefault();
            $('[data-delid='+id+']').detach();
            refreshUrl();
        }

        var addLink = function(){
            var u = urlInput.val();
            var l = labelInput.val();
            if(!l) l=u;
            if(!u) return;
            var d = $('<div></div');
            var di = $('<a>'+l+'</a>');
            var dii = $('<i></i>');
            dii.attr('class','snap-cross');
            dii.attr('onclick','deleteLink(event,'+delid+')');
            d.attr('data-delid',delid++);
            di.attr('href',u);
            di.attr('data-label',l);
            di.attr('data-link',u);
            di.attr('target','_blank')
            di.append(dii);
            d.append(di);
            links.append(d);
            urlform.reset();
        }

        var refreshUrl = function(){
            var allLinks = $('#links div a');
            var data = {url:url,urls:[]}
            $.each(allLinks,function(key,a){
                data.urls.push({
                    label:$(a).data('label'),
                    link:$(a).data('link')
                });
            });
            if(!data.urls.length){
                data.urls = [{
                    empty:true
                }]
            }
            update(data)
        }
        var update = function(data){
            notif.hide();
            saving.show();
            var up = $.post('/save',data,function(data){
                console.log(data)
                lastUpdate = new Date;
                changed = false;
                if(saving.is(':hidden'))
                    return;
                notif.slideUp();
                if(data.code==0)
                    saved.slideDown();
                else
                    error2.slideDown();
                setTimeout(function(){
                    notif.slideUp();
                },3000);
            });
            up.fail(function(){
                notif.slideUp();
                error.slideDown();
                setTimeout(function(){
                    notif.slideUp();
                },3000);
                console.log('Something went wrong')
            });
        }
        note.oninput = function(){
            changed = true;
            refreshNote();
        }
        setInterval(refreshNote,5000)
    </script>
</body>

</html>

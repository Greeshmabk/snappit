{
  "name": "snappit",
  "version": "1.0.0",
  "description": "simple note sharing website",
  "main": "index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "start:client": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build:client": "preact build --src preact_client/src",
    "serve:client": "preact build --src preact_client/src && preact serve",
    "dev:client": "preact watch --src preact_client/src",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmjayadeep/snappit.git"
  },
  "author": "Jayadeep K M",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kmjayadeep/snappit/issues"
  },
  "homepage": "https://github.com/kmjayadeep/snappit#readme",
  "dependencies": {
    "MD5": "^1.2.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "ejs": "^2.3.1",
    "express": "^4.17.1",
    "helmet": "^3.19.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.5",
    "morgan": "^1.5.3",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-render-to-string": "^4.1.0",
    "preact-router": "^2.6.1",
    "swagger-jsdoc": "^3.3.0",
    "swagger-ui-express": "^4.0.7"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-synacor": "^1.1.0",
    "eslint-plugin-import": "^2.18.2",
    "if-env": "^1.0.0",
    "nodemon": "^1.19.1",
    "preact-cli": "^2.0.0"
  }
}
